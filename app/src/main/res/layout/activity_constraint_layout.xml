<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    android:id="@+id/constraintLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_username"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/cell_normal_height"
        app:layout_constraintTop_toTopOf="@+id/constraintLayout"
        android:layout_marginTop="@dimen/margin_login"
        app:layout_constraintStart_toStartOf="@+id/constraintLayout"
        android:layout_marginStart="@dimen/margin_login"
        android:textSize="16sp"
        android:text="@string/title_username"/>

    <EditText
        android:id="@+id/et_username"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@+id/tv_username"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_username"
        app:layout_constraintEnd_toEndOf="@+id/constraintLayout"
        android:layout_marginEnd="@dimen/margin_login"
        android:textSize="16sp"
        android:lines="1"
        android:hint="@string/hint_username"/>


    <TextView
        android:id="@+id/tv_password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/tv_username"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="@+id/tv_username"
        app:layout_constraintEnd_toEndOf="@+id/tv_username"
        android:textSize="16sp"
        android:text="@string/title_password"/>

    <EditText
        android:id="@+id/et_password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@+id/tv_password"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_password"
        app:layout_constraintEnd_toEndOf="@+id/constraintLayout"
        android:layout_marginEnd="@dimen/margin_login"
        android:maxLines="1"
        android:textSize="16sp"
        android:hint="@string/hint_password"/>

    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/et_password"

        app:layout_constraintStart_toStartOf="@+id/constraintLayout"
        android:layout_marginStart="50dp"

        app:layout_constraintEnd_toEndOf="@+id/constraintLayout"
        android:layout_marginEnd="50dp"

        android:text="@string/title_login"
        />


</android.support.constraint.ConstraintLayout>